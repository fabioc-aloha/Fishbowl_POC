# Fishbowl POC Environment Configuration Template
# Copy this file to .env and update with your specific values
# Last Updated: August 8, 2025

# =============================================================================
# AZURE AUTHENTICATION & SUBSCRIPTION
# =============================================================================
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_SUBSCRIPTION_NAME=Your Subscription Name
AZURE_TENANT_ID=your-tenant-id-here
AZURE_RESOURCE_GROUP=your-resource-group
AZURE_USER_EMAIL=your-email@domain.com

# =============================================================================
# MICROSOFT FABRIC WORKSPACE
# =============================================================================
FABRIC_WORKSPACE_ID=your-workspace-id-here
FABRIC_WORKSPACE_NAME=Your Workspace Name
FABRIC_WORKSPACE_URL=https://app.fabric.microsoft.com/
FABRIC_LAKEHOUSE_NAME=Your Lakehouse Name
FABRIC_ENVIRONMENT=Production

# =============================================================================
# STORAGE ACCOUNT CONFIGURATION
# =============================================================================
STORAGE_ACCOUNT_NAME=your-storage-account-name
STORAGE_ACCOUNT_URL=https://your-storage-account.dfs.core.windows.net/
STORAGE_BASE_URL=abfss://{container}@your-storage-account.dfs.core.windows.net/

# Data Containers (customize as needed)
CONTAINER_SYNAPSE=synapse
CONTAINER_ML=machinelearning
CONTAINER_AAS=aas-container
CONTAINER_TEST=test

# =============================================================================
# AZURE SYNAPSE ANALYTICS (Optional)
# =============================================================================
SYNAPSE_WORKSPACE_NAME=your-synapse-workspace
SYNAPSE_SQL_ENDPOINT=your-synapse-workspace.sql.azuresynapse.net
SYNAPSE_WORKSPACE_URL=https://your-synapse-workspace.dev.azuresynapse.net/

# =============================================================================
# DATA DISCOVERY CONFIGURATION
# =============================================================================
# Notebook Configuration
DATA_FORMAT=PARQUET
TABLE_PREFIX=staging_
MAX_SEARCH_DEPTH=3
MIN_FILES_PER_FOLDER=1
FILE_EXTENSIONS=.parquet,.pqt
EXCLUDE_FOLDERS=_tmp,_temp,_logs,.spark

# Authentication Compliance
USE_WORKSPACE_ID=true
WORKSPACE_ID=${FABRIC_WORKSPACE_ID}

# =============================================================================
# CONNECTIVITY ENDPOINTS
# =============================================================================
AZURE_PORTAL_URL=https://portal.azure.com
FABRIC_PORTAL_URL=https://app.fabric.microsoft.com/
MCAS_PROXY_ENABLED=false

# =============================================================================
# DATA PATHS & SHORTCUTS
# =============================================================================
# Lakehouse File Paths
LAKEHOUSE_FILES_PATH=/Files
LAKEHOUSE_SHORTCUTS_PATH=/Files/shortcuts
LAKEHOUSE_SYNAPSE_PATH=/Files/synapse
LAKEHOUSE_ML_PATH=/Files/ml
LAKEHOUSE_AAS_PATH=/Files/aas
LAKEHOUSE_TEST_PATH=/Files/test

# SQL Endpoint Paths
SQL_ENDPOINT_BASE=[YourLakehouse].[Files]
SQL_SYNAPSE_TABLE=[YourLakehouse].[Files].[synapse]
SQL_ML_TABLE=[YourLakehouse].[Files].[ml]

# =============================================================================
# DEVELOPMENT ENVIRONMENT
# =============================================================================
# Python Configuration
PYTHON_ENV_PATH=.venv
REQUIREMENTS_FILE=requirements.txt
REQUIREMENTS_DEV_FILE=requirements-dev.txt

# Jupyter/Notebook Configuration
NOTEBOOK_KERNEL=python3
NOTEBOOK_PATH=notebooks/

# =============================================================================
# COGNITIVE ARCHITECTURE (ALEX)
# =============================================================================
# Neural Dream System
NEURAL_DREAM_SCRIPT=scripts/neural-dream.ps1
COGNITIVE_CONFIG=scripts/cognitive-config.json
ALEX_VERSION=1.0.5 UNNILPENTIUM

# Memory System
INSTRUCTIONS_PATH=.github/instructions/
PROMPTS_PATH=.github/prompts/
DOMAIN_KNOWLEDGE_PATH=domain-knowledge/

# =============================================================================
# SECURITY & COMPLIANCE
# =============================================================================
# Access Control
STORAGE_ROLE=Storage Blob Data Reader
FABRIC_ROLE=Member
MIN_TLS_VERSION=1.2

# Network Security
MCAS_PROXY_DOMAIN=mcas.ms
PRIVATE_ENDPOINT_ENABLED=false

# =============================================================================
# OPERATIONAL SETTINGS
# =============================================================================
# Logging & Monitoring
LOG_LEVEL=INFO
ENABLE_DEBUG=false
TELEMETRY_ENABLED=true

# Performance Tuning
SPARK_DRIVER_MEMORY=4g
SPARK_EXECUTOR_MEMORY=2g
QUERY_TIMEOUT=300

# Data Processing
BATCH_SIZE=1000
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5

# =============================================================================
# PROJECT METADATA
# =============================================================================
PROJECT_NAME=Your Project Name
PROJECT_VERSION=1.0.0
PROJECT_STATUS=DEVELOPMENT
PROJECT_PHASE=Setup
LAST_UPDATED=2025-08-08

# Integration Status
AZURE_SYNAPSE_STATUS=NOT_CONFIGURED
FABRIC_STATUS=NOT_CONFIGURED
STORAGE_STATUS=NOT_CONFIGURED
SQL_ENDPOINT_STATUS=NOT_CONFIGURED

# =============================================================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# =============================================================================
# Development
DEV_WORKSPACE_ID=${FABRIC_WORKSPACE_ID}
DEV_STORAGE_ACCOUNT=${STORAGE_ACCOUNT_NAME}

# Testing
TEST_CONTAINER=test
TEST_TABLE_PREFIX=test_

# Production
PROD_MONITORING_ENABLED=true
PROD_AUTO_SCALE_ENABLED=false
